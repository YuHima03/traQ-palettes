@if (IsCurrent)
{
    <span class="py-2 tx-button text-note-primary border-b-2 border-tx-note-primary
                 hover:opacity-80">
        @Anchor
    </span>
}
else
{
    <span class="tx-button py-2
                 hover:opacity-80">
        @Anchor
    </span>
}

@code {
    [Parameter]
    [EditorRequired]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool IsCurrent { get; set; } = false;

    [Parameter]
    [EditorRequired]
    public required string Href { get; set; }

    RenderFragment Anchor =>
    @<a href="@Href">
        @ChildContent
    </a>;
}
